[
  {
    "name": "nginx",
    "image": "${image_url}:${image_tag}",
    "essential": true,
    "workingDirectory": "/iprice/omsys",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "memory": 256,
    "dependsOn": [
      {
        "containerName": "php-fpm",
        "condition": "START"
      }
    ],
    "volumesFrom" : [
      {
        "sourceContainer": "php-fpm"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group" : "/ecs/omsys_cluster",
        "awslogs-region": "ap-southeast-1",
        "awslogs-stream-prefix": "ecs-nginx"
      }
    }
  },
  {
    "name": "php-fpm",
    "image": "${image_url}:${image_tag}",
    "memory": 512,
    "workingDirectory": "/iprice/omsys",
    "mountPoints": [
      {
        "sourceVolume": "iprice",
        "containerPath": "/iprice"
      }
    ],
    "environment": [
      {
        "name": "FPM_MAX_CHILDREN",
        "value": "20"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/omsys_cluster",
        "awslogs-region": "ap-southeast-1",
        "awslogs-stream-prefix": "ecs-php-fpm"
      }
    }
  }
]
